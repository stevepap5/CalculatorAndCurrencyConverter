<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CalculatorFragment">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">




          <com.google.android.material.textfield.TextInputLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/textInputLayout"
              app:layout_constraintTop_toTopOf="parent">

              <EditText
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:id="@+id/editTextCalc"/>


          </com.google.android.material.textfield.TextInputLayout>



      <TableLayout android:layout_height="0sp"
          android:layout_width="match_parent"
          android:id="@+id/currencyTabLayout"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          android:weightSum="5"
          app:layout_constraintTop_toBottomOf="@id/textInputLayout"
          app:layout_constraintBottom_toBottomOf="parent"
          android:stretchColumns="1, 4"
          style="@style/Widget.AppCompat.ButtonBar">

          <TableRow
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_weight="1"

              >

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_column="1"
                  android:text="C"
                  android:id="@+id/buttonDeleteAllCalcXml"
                  android:textSize="30sp"
                  style="@style/Widget.AppCompat.ButtonBar"
                  />

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_column="2"
                  style="@style/Widget.AppCompat.ButtonBar"
                  android:id="@+id/buttonDivideCalcXml"
                  android:textSize="30sp"
                  android:text="/" />

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_column="3"
                  style="@style/Widget.AppCompat.ButtonBar"
                  android:textSize="30sp"
                  android:id="@+id/buttonMultiplyCalcXml"
                  android:text="X" />

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_column="4"
                  android:id="@+id/buttonDeleteCalcXml"
                  android:text="DEL"
                  style="@style/Widget.AppCompat.ButtonBar"
                  android:textSize="30sp"
                  />

          </TableRow>

          <TableRow
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_weight="1">

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_column="1"
                  android:text="7"
                  android:id="@+id/buttonSevenCalcXml"
                  android:textSize="30sp"
                  style="@style/Widget.AppCompat.ButtonBar"
                  />

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_column="2"
                  style="@style/Widget.AppCompat.ButtonBar"
                  android:id="@+id/buttonEightCalcXml"
                  android:textSize="30sp"
                  android:text="8" />

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_column="3"
                  style="@style/Widget.AppCompat.ButtonBar"
                  android:textSize="30sp"
                  android:id="@+id/buttonNineCalcXml"
                  android:text="9" />

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_column="4"
                  android:id="@+id/buttonMinusCalcXml"
                  android:text="-"
                  style="@style/Widget.AppCompat.ButtonBar"
                  android:textSize="30sp"
                  />

          </TableRow>

          <TableRow
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_weight="1">

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_column="1"
                  android:text="4"
                  android:id="@+id/buttonFourCalcXml"
                  android:textSize="30sp"
                  style="@style/Widget.AppCompat.ButtonBar"
                  />

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_column="2"
                  style="@style/Widget.AppCompat.ButtonBar"
                  android:id="@+id/buttonFiveCalcXml"
                  android:textSize="30sp"
                  android:text="5" />

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_column="3"
                  style="@style/Widget.AppCompat.ButtonBar"
                  android:textSize="30sp"
                  android:id="@+id/buttonSixCalcXml"
                  android:text="6" />

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_column="4"
                  android:id="@+id/buttonAddCalcXml"
                  android:text="+"
                  style="@style/Widget.AppCompat.ButtonBar"
                  android:textSize="30sp"
                  />

          </TableRow>

          <TableRow
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_weight="1">

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_column="1"
                  android:text="1"
                  android:id="@+id/buttonOneCalcXml"
                  android:textSize="30sp"
                  style="@style/Widget.AppCompat.ButtonBar"
                  />

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_column="2"
                  style="@style/Widget.AppCompat.ButtonBar"
                  android:id="@+id/buttonTwoCalcXml"
                  android:textSize="30sp"
                  android:text="2" />

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_column="3"
                  style="@style/Widget.AppCompat.ButtonBar"
                  android:textSize="30sp"
                  android:id="@+id/buttonThreeCalcXml"
                  android:text="3" />

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_column="4"
                  android:id="@+id/buttonEqualCalcXml"
                  android:text="="
                  style="@style/Widget.AppCompat.ButtonBar"
                  android:textSize="30sp"
                  />

          </TableRow>

          <TableRow
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_weight="1">

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_column="1"
                  android:text="0"
                  android:id="@+id/buttonZeroCalcXml"
                  android:textSize="30sp"
                  style="@style/Widget.AppCompat.ButtonBar"
                  />

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_column="2"
                  style="@style/Widget.AppCompat.ButtonBar"
                  android:id="@+id/buttonDotCalcXml"
                  android:textSize="30sp"
                  android:text="." />



          </TableRow>
      </TableLayout>

      </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>